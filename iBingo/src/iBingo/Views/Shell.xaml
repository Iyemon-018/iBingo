<Window
    x:Class="iBingo.Views.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iBingo="clr-namespace:iBingo"
    xmlns:local="clr-namespace:iBingo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:iBingo.ViewModels"
    Title="Shell"
    Width="300"
    Height="300"
    d:DataContext="{d:DesignInstance {x:Type viewModels:ShellViewModel}}"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding ShuffleCommand, Mode=OneWay}" Content="Shuffle" />
                <Button Command="{Binding StopCommand, Mode=OneWay}" Content="Stop" />
            </StackPanel>
        </Border>
        <TextBox
            Grid.Row="1"
            HorizontalAlignment="Left"
            FontSize="122"
            Text="{Binding CurrentNumber, Mode=OneWay, StringFormat=D2}" />
        <ListBox
            Grid.Row="1"
            HorizontalAlignment="Right"
            ItemsSource="{Binding HitNumbers, Mode=OneWay}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DataTemplate.Resources>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Foreground" Value="LightGray" />
                            <Setter Property="FontSize" Value="30" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Hit}" Value="True">
                                    <Setter Property="Foreground" Value="Black" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataTemplate.Resources>
                    <Grid>
                        <TextBlock Text="{Binding Number, StringFormat=D2}" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
